{% extends 'layout_superadmin.html.twig' %}


{% block title %}Hello {{ app.user.firstname }} !{% endblock %}

{% block content %}
<main class="col-md-10 mx-auto my-5">
    <h1>✅ Bonjour {{ app.user.firstname }} !</h1>

    <div class="row">
        <div class="col-6 d-flex justify-content-center">
            <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('superadmin_show_users') }}" class="btn text-success"><i class="bi bi-people-fill text-success"></i> Gérer les utilisateurs</a>
                    </div>
                    <p class="card-text text-light">Consulter la liste des utilisateurs, éditer et attribuer les
                        rôles (ex : ajouter ou supprimer un coach).</p>
                </div>
            </div>
        </div>
        <div class="col-6 d-flex justify-content-center">
            <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('superadmin_show_clients') }}" class="btn text-success"><i class="bi bi-file-earmark-person-fill text-success"></i> Gérer les clients</a>
                    </div>
                    <p class="card-text text-light">Consulter la liste des clients.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 d-flex justify-content-center">
            <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('superadmin_show_coachs') }}" class="btn text-success"> <i class="bi bi-trophy-fill text-success"></i> Gérer les coachs</a>
                    </div>
                <p class="card-text text-light">Consulter la liste des coachs.</p>
                </div>
            </div>
        </div>
        <div class="col-6 d-flex justify-content-center">
            <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('admin_activity_index') }}" class="btn text-success"><i class="bi bi-palette2 text-success"></i> Gérer les activités</a>
                    </div>
                <p class="card-text text-light">Consulter la liste des activités, éditer et supprimer.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 d-flex justify-content-center">
        <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('admin_space_index') }}" class="btn text-success"><i class="bi bi-geo-alt-fill text-success"></i> Gérer les espaces d'entrainement</a>
                    </div>
                <p class="card-text text-light">Consulter la liste des espaces d'entrainement, ajouter, éditer et supprimer.</p>
                </div>
            </div>
        </div>
        <div class="col-6 d-flex justify-content-center">
            <div class="space-card my-3 m-auto border border-dark bg-dark rounded w-75">
                <div class="card-body">
                    <div class="d-flex justify-content-start">
                        <a href="{{ path('coach_booking_index') }}" class="btn text-success"><i class="bi bi-journal-richtext text-success"></i> Gérer les réservations</a>
                    </div>
                    <p class="card-text text-light">Consulter la liste des réservations de coach, attribuer les coachs et
                        les espaces.</p>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}