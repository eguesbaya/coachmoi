<div class="mes-informations border border-dark rounded m-1">
    <div class="profile-h2 border border-dark d-flex align-items-center bg-dark rounded w-75 p-0">
        <h2 class="m-2 text-light text-truncate"><i class="bi bi-person-lines-fill text-success me-2"></i> Mes informations</h2>
   </div>
    <div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p> Nom :</p>
                <h3 class="text-start mx-5">{{ app.user.lastname }}</h3>
            </div>
        </div>
        <div class="my-2">
             <div class="bg-light m-3 border rounded">
                <p> Prénom :</p>
                <h3 class="text-start mx-5">{{ app.user.firstname }}</h3>
           </div>
        </div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p> Téléphone :</p>
                <h3 class="text-start mx-5">{{ app.user.telephone }}</h3>
             </div>
        </div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p> Email :</p>
                <h3 class="text-start mx-5">{{ app.user.email }}</h3>
            </div>
        </div>
        <div class="my-2">
             <div class="bg-light m-3 border rounded">
                <p>Date de naissance :</p>
                {% if app.user.client.birthDate is null %}
                    <div class="alert alert-danger mx-3" role="alert">
                        Veuillez <a href="{{ path('client_edit') }}" class="alert-link">indiquer</a> votre date de naissance.
                    </div>
                {% else %}
                    <h3 class="text-start mx-5">{{ app.user.client.birthDate|date("d/m/Y") }}</h3>
                {% endif %}
            </div>
        </div>
        <div class="my-2">
              <div class="bg-light m-3 border rounded">
                <p>Mes documents : </p>
                <div class= "documents d-flex flex-row mx-5">
                    <a class= "d-flex flex-column align-items-center text-dark" href="{{ path('cgu') }}">
                     <i class="h1 m-1 bi bi-file-earmark-text-fill"></i>
                        <p>CGU</p>
                    </a>
                </div>
            </div>
        </div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p class="mx-1 p-2">
                    {% if app.user.client %}
                        {% if app.user.client.isapt %}
                            &nbsp; <i class="bi bi-check-circle-fill text-success"></i> Le client certifie être apte à la pratique sportive.
                        {% else %}
                            &nbsp; <i class="bi bi-x-circle-fill text-danger"></i> Le client n'est pas apte à la pratique sportive.
                        {% endif %}
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</div>