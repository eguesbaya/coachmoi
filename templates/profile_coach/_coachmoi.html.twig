<div class="border border-dark rounded m-1">
    <div class="profile-h2 d-flex align-items-center border border-dark rounded title w-75 bg-dark col-md-8 col-lg-6">
        <h2 class="m-2 text-truncate text-light"><i class="bi bi-trophy-fill text-success"></i> Coach Moi</h2>
    </div>
    <div class="bg-light my-2 px-3 py-2 m-3 border rounded">

        <table class="table">
            <thead>
                <tr class="fs-4">
                    <th scope="col">Clients</th>
                    <th scope="col">Salles</th>
                </tr>
            </thead>

            <tbody>
                {% for booking in app.user.coach.coachbookings %}
                    <tr scope="row">
                        <td>{{ booking.client.user.firstname }} {{ booking.client.user.lastname }}</td>
                        <td>{{ booking.trainingSpace.name }}</td>
                    </tr>
                {% else %}
                    <tr scope="row">
                        <td colspan="2">
                            <div class="alert alert-danger m-3" role="alert">
                                <b>Vous n'avez pas encore de clients</b>
                                </br>
                                {% if app.user.coach.activities is empty %}
                                    <small>Veuillez renseigner les activités sportives que vous enseignez pour nous aider à vous trouver des clients.</small>
                                {% else %}
                                    <small>Nous sommes en train de travailler dur afin de vous trouver des clients. Mercipour votre patience !</small>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
</div>
