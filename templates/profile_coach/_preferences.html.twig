<div class="mes-preferences border border-dark rounded m-1 mb-3">
    <div class="profile-h2 border border-dark rounded d-flex align-items-center bg-dark w-75 p-0">
        <h2 class="m-2 text-truncate text-light"><i class="bi bi-heart-fill text-success"></i> Mes préférences</h2>
    </div>
    <div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p >Activités :</p>
                    {% for activity in app.user.coach.activities %}
                        <h5 class="text-start mx-5"> <li> {{ activity.name }} </li>
                    {% else %}
                        <div class="alert alert-danger mx-3" role="alert">
                            Veuillez <a href="{{ path('coach_edit') }}" class="alert-link">choisir</a> les activités que vous enseignez.
                        </div>
                    {% endfor %}
            </div>
        </div>
        <div class="my-2">
            <div class="bg-light m-3 border rounded">
                <p>Tarif Horaire :</p>
                {% if app.user.coach.hourlyRate is null %}
                    <div class="alert alert-danger mx-3" role="alert">
                         Veuillez <a href="{{ path('coach_edit') }}" class="alert-link">indiquer</a> votre tarif/horaire.
                     </div>
                {% else %}
                    <h5 class="text-start mx-5">{{ app.user.coach.hourlyRate }}€</h5>
                {% endif %}
            </div>
        </div>
    </div>
</div>
